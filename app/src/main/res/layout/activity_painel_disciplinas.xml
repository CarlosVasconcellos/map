<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCinzaFundoTexto"
    android:orientation="vertical"
    tools:context=".painelDisciplinas">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="@dimen/largura_botao_disciplina_painel"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/botao_l1_c1"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l1_c2"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l1_c3"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l1_c4"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/botao_l2_c1"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l2_c2"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l2_c3"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l2_c4"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/botao_l3_c1"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l3_c2"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l3_c3"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l3_c4"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/botao_l4_c1"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l4_c2"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l4_c3"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/botao_l4_c4"
                        android:layout_width="@dimen/largura_botao_disciplina_painel"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </HorizontalScrollView>

</LinearLayout>