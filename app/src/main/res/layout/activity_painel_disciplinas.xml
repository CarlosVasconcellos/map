                </LinearLayout>
            </TableRow>

        </TableLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/emailRodapeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="a@b.com" />

</LinearLayout>